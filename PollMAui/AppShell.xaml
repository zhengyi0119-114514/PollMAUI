<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PollMAui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PollMAui"
    xmlns:views="clr-namespace:PollMAui.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="PollMAui">

    <ShellContent Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"/>
    <ShellContent Title="题目列表"
                  ContentTemplate="{DataTemplate views:QuestionListPage}"/>
    <ShellContent Title="用户"
        ContentTemplate="{DataTemplate views:AccountPage}"/>
</Shell>
